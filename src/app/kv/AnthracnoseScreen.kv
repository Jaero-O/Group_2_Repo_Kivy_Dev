#:kivy 2.0.0

<AnthracnoseScreen>:
    # Main Background
    canvas.before:
        Color:
            rgba: 248/255, 248/255, 248/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    # Header Section
    BoxLayout:
        orientation: "horizontal"
        size_hint: None, None
        height: 50
        width: self.parent.width
        pos_hint: {"x": 0.06, "y": 0.90}
        spacing: 5.3

        Image:
            source: "app/assets/leaf_2.png"
            size_hint: None, None
            size: 35, 35
            fit_mode: "contain"
            mipmap: True

    BoxLayout:
        orientation: "horizontal"
        size_hint: None, None
        height: 80
        width: self.parent.width
        pos_hint: {"x": 0.17, "y": 0.87}
        spacing: 5.3

        Label:
            text: "Anthracnose\nDisease"
            color: 3/255, 30/255, 0/255, 1
            font_size: 32
            bold: True
            valign: "middle"
            halign: "left"
            text_size: self.size

    # Back Button
    RoundedButton:
        id: back_button
        size_hint: None, None
        size: 100, 36
        pos_hint: {"x": 0.79, "y": 0.915}
        on_release: app.root.current = 'help'

        BoxLayout:
            orientation: "horizontal"
            size: self.size
            spacing: 6
            padding: [0, 0, 0, 0]
            pos_hint: {"center_y": 0.5}
            size: back_button.size
            pos: back_button.pos

            Image:
                source: "app/assets/back.png"
                fit_mode: "contain"
                size_hint: None, None
                size: 20, 20
                pos_hint: {"center_y": 0.5}
                mipmap: True

            Label:
                text: "Back"
                color: 3/255, 30/255, 0/255, 1
                font_size: 16
                bold: True
                size_hint_x: None
                width: self.texture_size[0]
                halign: "left"
                valign: "middle"
                pos_hint: {"center_y": 0.5}

    # Content (Scrollable)
    ScrollView:
        size_hint: 0.88, 0.75
        pos_hint: {"x": 0.06, "y": 0.10}
        do_scroll_x: False

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            padding: [10, 10]
            spacing: 10
            width: self.parent.width
            height: self.minimum_height

            Label:
                text: root.description_text
                color: (60/255, 60/255, 60/255, 1)
                font_size: 16
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
                halign: "justify"
                valign: "top"