#:kivy 2.0.0

<ResultScreen>:
    canvas.before:
        # Main background color and texture
        Color:
            rgba: 248/255, 248/255, 248/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    # Header Section (Fixed at top)
    BoxLayout:
        orientation: "horizontal"
        size_hint: None, None
        height: 50
        width: self.parent.width
        pos_hint: {"x": 0.06, "y": 0.92}
        spacing: 5.3
        valign: "left"

        Image:
            source: "app/assets/result.png"
            size_hint: None, None
            size: 35, 35
            allow_stretch: True
            keep_ratio: True
            color: (6/255, 87/255, 6/255, 1)
            mipmap: True

    BoxLayout:
        orientation: "horizontal"
        size_hint: None, None
        height: 50
        width: self.parent.width
        pos_hint: {"x": 0.17, "y": 0.91}
        spacing: 5.3
        valign: "left"

        Label:
            text: "Result"
            color: 3/255, 30/255, 0/255, 1
            font_size: 32
            bold: True
            valign: "middle"
            halign: "left"
            text_size: self.size

    # Back Button (Fixed at top)
    RoundedButton:
        id: back_button
        size_hint: None, None
        size: 100, 36
        pos_hint: {"x": 0.79, "y": 0.915}
        on_release: root.go_back()

        BoxLayout:
            orientation: "horizontal"
            size: self.size
            spacing: 6
            padding: [0, 0, 0, 0]
            pos_hint: {"center_y": 0.5}
            size: back_button.size
            pos: back_button.pos

            Image:
                source: "app/assets/back.png"
                allow_stretch: True
                keep_ratio: True
                size_hint: None, None
                size: 20, 20
                pos_hint: {"center_y": 0.5}
                mipmap: True

            Label:
                text: "Back"
                color: 3/255, 30/255, 0/255, 1
                font_size: 16
                bold: True
                size_hint_x: None
                width: self.texture_size[0]
                halign: "left"
                valign: "middle"
                pos_hint: {"center_y": 0.5}

    # Scrollable Content Area
    ScrollView:
        size_hint: 1, None
        height: root.height * 0.85
        pos_hint: {"center_x": 0.5, "y": 0.0}
        do_scroll_x: False
        do_scroll_y: True
        scroll_type: ['bars', 'content']
        bar_width: 8
        bar_color: 0.5, 0.5, 0.5, 0.7
        bar_inactive_color: 0.5, 0.5, 0.5, 0.3

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            padding: [30, 20, 30, 30]
            spacing: 30

            # Image Display Area
            FloatLayout:
                size_hint: 1, None
                height: 300

                # Shadow
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 0.15
                    RoundedRectangle:
                        pos: self.x + 2.6, self.y - 3.1
                        size: self.size
                        radius: [15, 15, 15, 15]

                # Background
                canvas:
                    Color:
                        rgba: 0.93, 0.95, 0.93, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]

                Image:
                    source: root.image_path
                    allow_stretch: True
                    keep_ratio: True
                    # --- FIX 1 APPLIED HERE ---
                    size_hint: 0.9, 0.9
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

            # Result Details Section
            BoxLayout:
                orientation: "vertical"
                size_hint: 1, None
                height: self.minimum_height
                spacing: 15
                padding: [0, 0, 0, 0]

                # Percentage and Tag Row
                BoxLayout:
                    id: confidence_layout
                    orientation: "horizontal"
                    size_hint: 1, None
                    height: 80
                    spacing: 10

                    # Healthy Percentage
                    Label:
                        text: "A"
                        color: (38/255, 164/255, 33/255, 1)
                        font_size: 64
                        bold: True
                        size_hint_x: None
                        width: self.texture_size[0]
                        halign: "left"
                        valign: "middle"

                    Widget:
                        size_hint_x: 1

                    BoxLayout:
                        size_hint: None, None
                        size: 140, 30
                        pos_hint: {"center_y": 0.8}

                        # Healthy Tag
                        canvas.before:
                            Color:
                                rgba: 201/255, 255/255, 142/255, 1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [8]

                        Label:
                            text: root.disease_name.upper()
                            color: 0/255, 82/255, 0/255, 1
                            font_size: 16
                            bold: True
                            valign: "middle"
                            halign: "center"
                            text_size: self.size

                # Severity Level
                Label:
                    text: f"SEVERITY LEVEL: {root.severity_percentage_str}"
                    color: 100/255, 100/255, 100/255, 1
                    font_size: 12
                    bold: True
                    size_hint: 1, None
                    height: self.texture_size[1]
                    halign: "left"
                    valign: "middle"
                    text_size: self.width, None

                # Leaf Data Header
                Label:
                    text: "Leaf Data"
                    color: 0, 0, 0, 1
                    font_size: 18
                    bold: True
                    size_hint: 1, None
                    height: self.texture_size[1] + 10
                    halign: "left"
                    valign: "middle"
                    text_size: self.width, None

                # Description
                Label:
                    text: root.disease_description
                    color: 0, 0, 0, 1
                    font_size: 18
                    size_hint: 1, None
                    height: self.texture_size[1] + 20
                    halign: "left"
                    valign: "top"
                    text_size: self.width, None

                # Date Section
                BoxLayout:
                    orientation: "vertical"
                    size_hint: 1, None
                    height: self.minimum_height
                    spacing: 8

                    Label:
                        text: "Date Scanned"
                        color: 0, 0, 0, 1
                        font_size: 18
                        bold: True
                        size_hint: 1, None
                        height: self.texture_size[1]
                        halign: "left"
                        valign: "middle"
                        text_size: self.width, None

                    Label:
                        # --- FIX 2 APPLIED HERE ---
                        text: root.scan_timestamp
                        color: 0, 0, 0, 1
                        font_size: 18
                        size_hint: 1, None
                        height: self.texture_size[1]
                        halign: "left"
                        valign: "middle"
                        text_size: self.width, None

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 50
                spacing: 20

                RoundedButton:
                    text: "Retake"
                    on_release: root.go_back()

                RoundedButton:
                    id: save_button
                    text: "Save"
                    on_release: app.root.current = 'save'