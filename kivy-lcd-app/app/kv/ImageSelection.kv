    # --- FILTER BAR SECTION ---
    FloatLayout:
        size_hint: None, None
        size: 418, 36
        pos_hint: {"center_x": 0.5, "y": 0.15}

        # Gray highlight background (animated)
        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.75
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [18, 18, 18, 18]

            Color:
                rgba: 0.7, 0.7, 0.7, 1
            RoundedRectangle:
                pos: (self.x + root.highlight_x, self.y + 4)
                size: (90, 28)
                radius: [15, 15, 15, 15]

        BoxLayout:
            orientation: "horizontal"
            size_hint: None, None
            size: 418, 36
            spacing: 0
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Button:
                text: "Years"
                background_normal: ''
                background_color: (0, 0, 0, 0)
                color: (1, 1, 1, 1) if root.active_filter == "Years" else (64/255, 64/255, 64/255, 1)
                bold: True
                font_size: 14
                on_release: root.move_highlight("Years")

            Button:
                text: "Months"
                background_normal: ''
                background_color: (0, 0, 0, 0)
                color: (1, 1, 1, 1) if root.active_filter == "Months" else (64/255, 64/255, 64/255, 1)
                bold: True
                font_size: 14
                on_release: root.move_highlight("Months")

            Button:
                text: "Days"
                background_normal: ''
                background_color: (0, 0, 0, 0)
                color: (1, 1, 1, 1) if root.active_filter == "Days" else (64/255, 64/255, 64/255, 1)
                bold: True
                font_size: 14
                on_release: root.move_highlight("Days")

            Button:
                text: "All Photos"
                background_normal: ''
                background_color: (0, 0, 0, 0)
                color: (1, 1, 1, 1) if root.active_filter == "All Photos" else (64/255, 64/255, 64/255, 1)
                bold: True
                font_size: 14
                on_release: root.move_highlight("All Photos")
