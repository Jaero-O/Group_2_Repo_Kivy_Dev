#:kivy 2.0.0

<ImageSelection>
    # Background Color
    canvas.before:
        Color:
            rgba: 248/255, 248/255, 248/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    # Header Section
    BoxLayout:
        orientation: "horizontal"
        size_hint: None, None
        height: 50
        width: self.parent.width
        pos_hint: {"x": 0.06, "y": 0.92}
        spacing: 5.3

        Image:
            source: "app/assets/records.png"
            size_hint: None, None
            size: 35, 35
            allow_stretch: True
            keep_ratio: True
            color: 6/255, 87/255, 6/255, 1
            mipmap: True

    BoxLayout:
        orientation: "horizontal"
        size_hint: None, None
        height: 50
        width: self.parent.width
        pos_hint: {"x": 0.17, "y": 0.91}
        spacing: 5.3

        Label:
            text: "Records"
            color: 3/255, 30/255, 0/255, 1
            font_size: 32
            bold: True
            valign: "middle"
            halign: "left"
            text_size: self.size

    # Back Button
    RoundedButton:
        id: back_button
        size_hint: None, None
        size: 100, 36
        pos_hint: {"x": 0.79, "y": 0.915}
        on_release: app.root.current = 'records'

        BoxLayout:
            orientation: "horizontal"
            size: self.size
            spacing: 6
            padding: [0, 0, 0, 0]
            pos_hint: {"center_y": 0.5}
            size: back_button.size
            pos: back_button.pos

            Image:
                source: "app/assets/back.png"
                allow_stretch: True
                keep_ratio: True
                size_hint: None, None
                size: 20, 20
                pos_hint: {"center_y": 0.5}
                mipmap: True

            Label:
                text: "Back"
                color: 3/255, 30/255, 0/255, 1
                font_size: 16
                bold: True
                size_hint_x: None
                width: self.texture_size[0]
                halign: "left"
                valign: "middle"
                pos_hint: {"center_y": 0.5}


    # Image Gallery Section
    ScrollView:
        id: scroll_view
        size_hint: (1, None)
        height: root.height * 0.74
        pos_hint: {"x": 0, "y": 0.04}
        bar_width: 8
        do_scroll_x: False

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: 8

            Label:
                id: empty_label
                text: ''
                color: 0,0,0,0.6
                font_size: 16
                bold: True
                size_hint_y: None
                height: 20
                halign: 'center'
                valign: 'middle'
                text_size: self.width, None

            GridLayout:
                id: image_grid
                cols: 3
                spacing: [2, 2]
                padding: [0, 0, 0, 0]
                size_hint_y: None
                height: self.minimum_height

            # Load More Button
            Button:
                id: load_more_btn
                text: "Load More"
                size_hint_y: None
                height: 44
                font_size: 15
                bold: True
                background_normal: ''
                background_color: 6/255, 87/255, 6/255, 1
                color: 1, 1, 1, 1
                opacity: 1 if root.has_more else 0
                disabled: not root.has_more
                on_release: root.load_more()

    # Enhanced Filter Section - Second Row (Disease, Date, Sort, Calendar)
    FloatLayout:
        size_hint: None, None
        size: 430, 40
        pos_hint: {"center_x": 0.5, "y": 0.79}

        # White background with rounded corners
        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.95
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [8, 8, 8, 8]

        BoxLayout:
            orientation: "horizontal"
            size_hint: None, None
            size: 426, 36
            spacing: 4
            padding: [4, 2, 4, 2]
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Button:
                id: disease_btn
                text: "Disease: All Diseases â–¼"
                background_normal: ''
                background_color: 248/255, 248/255, 248/255, 1
                color: 3/255, 30/255, 0/255, 1
                bold: True
                font_size: 11
                size_hint_x: 0.35
                on_release: root.show_disease_dropdown()
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                shorten: True
                shorten_from: 'right'
                
                canvas.before:
                    Color:
                        rgba: 220/255, 220/255, 220/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [6]

            Button:
                id: date_btn
                text: "Date: All Time â–¼"
                background_normal: ''
                background_color: 248/255, 248/255, 248/255, 1
                color: 3/255, 30/255, 0/255, 1
                bold: True
                font_size: 11
                size_hint_x: 0.30
                on_release: root.show_date_dropdown()
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                shorten: True
                shorten_from: 'right'
                
                canvas.before:
                    Color:
                        rgba: 220/255, 220/255, 220/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [6]

            Button:
                id: sort_btn
                text: "Sort: Newest First â–¼"
                background_normal: ''
                background_color: 248/255, 248/255, 248/255, 1
                color: 3/255, 30/255, 0/255, 1
                bold: True
                font_size: 11
                size_hint_x: 0.25
                on_release: root.show_sort_dropdown()
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                shorten: True
                shorten_from: 'right'
                
                canvas.before:
                    Color:
                        rgba: 220/255, 220/255, 220/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [6]

            Button:
                id: calendar_btn
                text: "ðŸ“…"
                background_normal: ''
                background_color: 6/255, 87/255, 6/255, 1
                color: 1, 1, 1, 1
                bold: True
                font_size: 16
                size_hint_x: 0.10
                on_release: root.open_custom_date_picker()
                
                canvas.before:
                    Color:
                        rgba: 6/255, 87/255, 6/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [6]

    # Time Filter Bar Section (Years/Months/Days/All Photos)
    FloatLayout:
        size_hint: None, None
        size: 418, 36
        pos_hint: {"center_x": 0.5, "y": 0.15}

        # Gray highlight background
        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.75
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [18, 18, 18, 18]

            Color:
                rgba: 0.7, 0.7, 0.7, 1
            RoundedRectangle:
                pos: (self.x + root.highlight_x, self.y + 4)
                size: (90, 28)
                radius: [15, 15, 15, 15]

        BoxLayout:
            orientation: "horizontal"
            size_hint: None, None
            size: 418, 36
            spacing: 0
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Button:
                text: "Years"
                background_normal: ''
                background_color: (0, 0, 0, 0)
                color: (1, 1, 1, 1) if root.active_filter == "Years" else (64/255, 64/255, 64/255, 1)
                bold: True
                font_size: 14
                on_release: root.move_highlight("Years")

            Button:
                text: "Months"
                background_normal: ''
                background_color: (0, 0, 0, 0)
                color: (1, 1, 1, 1) if root.active_filter == "Months" else (64/255, 64/255, 64/255, 1)
                bold: True
                font_size: 14
                on_release: root.move_highlight("Months")

            Button:
                text: "Days"
                background_normal: ''
                background_color: (0, 0, 0, 0)
                color: (1, 1, 1, 1) if root.active_filter == "Days" else (64/255, 64/255, 64/255, 1)
                bold: True
                font_size: 14
                on_release: root.move_highlight("Days")

            Button:
                text: "All Photos"
                background_normal: ''
                background_color: (0, 0, 0, 0)
                color: (1, 1, 1, 1) if root.active_filter == "All Photos" else (64/255, 64/255, 64/255, 1)
                bold: True
                font_size: 14
                on_release: root.move_highlight("All Photos")
