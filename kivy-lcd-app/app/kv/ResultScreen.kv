#:kivy 2.0.0

<ResultScreen>:
    canvas.before:
        # Main background color and texture
        Color:
            rgba: 248/255, 248/255, 248/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    # Header Section (Fixed at top)
    BoxLayout:
        orientation: "horizontal"
        size_hint: None, None
        height: 50
        width: self.parent.width
        pos_hint: {"x": 0.06, "y": 0.92}
        spacing: 5.3
        valign: "left"

        Image:
            source: "/home/kennethbinasa/kivy_v1/kivy-lcd-app/output_image_reduced.png"
            size_hint: None, None
            size: 35, 35
            allow_stretch: True
            keep_ratio: True
            color: (6/255, 87/255, 6/255, 1)
            mipmap: True

    BoxLayout:
        orientation: "horizontal"
        size_hint: None, None
        height: 50
        width: self.parent.width
        pos_hint: {"x": 0.17, "y": 0.91}
        spacing: 5.3
        valign: "left"

        Label:
            text: "Result" if not root.prediction_label else ("Result Â· " + str(root.prediction_label))
            color: 3/255, 30/255, 0/255, 1
            font_size: 32
            bold: True
            valign: "middle"
            halign: "left"
            text_size: self.size

    # Back Button (Fixed at top)
    RoundedButton:
        id: back_button
        size_hint: None, None
        size: 100, 36
        pos_hint: {"x": 0.79, "y": 0.915}
        on_release: root.go_back()

        BoxLayout:
            orientation: "horizontal"
            size: self.size
            spacing: 6
            padding: [0, 0, 0, 0]
            pos_hint: {"center_y": 0.5}
            size: back_button.size
            pos: back_button.pos

            Image:
                source: "app/assets/back.png"
                allow_stretch: True
                keep_ratio: True
                size_hint: None, None
                size: 20, 20
                pos_hint: {"center_y": 0.5}
                mipmap: True

            Label:
                text: "Back"
                color: 3/255, 30/255, 0/255, 1
                font_size: 16
                bold: True
                size_hint_x: None
                width: self.texture_size[0]
                halign: "left"
                valign: "middle"
                pos_hint: {"center_y": 0.5}

    # Scrollable Content Area
    ScrollView:
        size_hint: 1, None
        height: root.height * 0.85
        pos_hint: {"center_x": 0.5, "y": 0.0}
        do_scroll_x: False
        do_scroll_y: True
        scroll_type: ['bars', 'content']
        bar_width: 8
        bar_color: 0.5, 0.5, 0.5, 0.7
        bar_inactive_color: 0.5, 0.5, 0.5, 0.3

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            padding: [30, 20, 30, 30]
            spacing: 30

            # Image Display Area
            BoxLayout:
                orientation: "vertical"
                size_hint: 1, None
                height: 500
                padding: [10, 10, 10, 10]

                # Shadow
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 0.15
                    RoundedRectangle:
                        pos: self.x + 2.6, self.y - 3.1
                        size: self.size
                        radius: [15, 15, 15, 15]

                # Background
                canvas:
                    Color:
                        rgba: 0.93, 0.95, 0.93, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]
                
                # Display the scanned image
                Image:
                    source: root.image_path if root.image_path else ""
                    allow_stretch: False
                    keep_ratio: True

            # Result Details Section
            BoxLayout:
                orientation: "vertical"
                size_hint: 1, None
                height: self.minimum_height
                spacing: 15
                padding: [0, 0, 0, 0]

                # Percentage and Tag Row
                BoxLayout:
                    orientation: "horizontal"
                    size_hint: 1, None
                    height: 80
                    spacing: 10

                    # Healthy Percentage
                    Label:
                        text: str(int(root.severity_percentage)) + "%"
                        color: (38/255, 164/255, 33/255, 1) if root.severity_level.lower() == 'healthy' else (207/255,191/255,44/255,1) if root.severity_level.lower() == 'moderate' else (221/255,45/255,29/255,1)
                        font_size: 64
                        bold: True
                        size_hint_x: None
                        width: self.texture_size[0]
                        halign: "left"
                        valign: "middle"

                    # Moderate Percentage
                    # Label:
                    #     text: "67%"
                    #     color: 207/255, 191/255, 44/255, 1
                    #     font_size: 64
                    #     bold: True
                    #     size_hint: None, None
                    #     size: self.texture_size
                    #     pos_hint: {"x": 0.0, "y": 0.90}   

                    # Anthracnose Percentage
                    # Label:
                    #     text: "15%"
                    #     color: 221/255, 45/255, 29/255, 1
                    #     font_size: 64
                    #     bold: True
                    #     size_hint: None, None
                    #     size: self.texture_size
                    #     pos_hint: {"x": 0.0, "y": 0.90}

                    Widget:
                        size_hint_x: 1

                    BoxLayout:
                        size_hint: None, None
                        size: 140, 30
                        pos_hint: {"center_y": 0.8}
                    
                        # Healthy Tag
                        canvas.before:
                            Color:
                                rgba: 201/255, 255/255, 142/255, 1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [8]

                        Label:
                            text: root.severity_level.upper() if root.severity_level else "UNKNOWN"
                            color: (0/255, 82/255, 0/255, 1) if root.severity_level.lower() == 'healthy' else (99/255,91/255,1/255,1) if root.severity_level.lower() == 'moderate' else (150/255,22/255,3/255,1)
                            font_size: 16
                            bold: True
                            valign: "middle"
                            halign: "center"
                            text_size: self.size
                        
                        # Moderate Tag
                        # canvas.before:
                        #     Color:
                        #         rgba: 255/255, 246/255, 149/255, 1
                        #     RoundedRectangle:
                        #         pos: self.pos
                        #         size: self.size
                        #         radius: [8]

                        # Label:
                        #     text: "Moderate"
                        #     color: 99/255, 91/255, 1/255, 1
                        #     font_size: 16
                        #     bold: True
                        #     valign: "middle"
                        #     halign: "center"
                        #     text_size: self.size
                        
                        # Anthracnose Tag
                        # canvas.before:
                        #     Color:
                        #         rgba: 255/255, 180/255, 168/255, 1
                        #     RoundedRectangle:
                        #         pos: self.pos
                        #         size: self.size
                        #         radius: [8]

                        # Label:
                        #     text: "ANTHRACNOSE"
                        #     color: 150/255, 22/255, 3/255, 1
                        #     font_size: 16
                        #     bold: True
                        #     valign: "middle"
                        #     halign: "center"
                        #     text_size: self.size

                # Severity Level
                Label:
                    text: "SEVERITY LEVEL" if root.severity_level else "SEVERITY LEVEL (N/A)"
                    color: 100/255, 100/255, 100/255, 1
                    font_size: 12
                    bold: True
                    size_hint: 1, None
                    height: self.texture_size[1]
                    halign: "left"
                    valign: "middle"
                    text_size: self.width, None

                # Leaf Data Header
                Label:
                    text: "Leaf Data" if root.prediction_label else "Leaf Data (No prediction)"
                    color: 0, 0, 0, 1
                    font_size: 18
                    bold: True
                    size_hint: 1, None
                    height: self.texture_size[1] + 10
                    halign: "left"
                    valign: "middle"
                    text_size: self.width, None

                # Description
                Label:
                    text: root.disease_description if root.disease_description else ("Healthy leaf with no detected disease." if root.severity_level.lower() == 'healthy' else ((str(root.prediction_label) + " detected \u00b7 " + str(round(root.severity_percentage, 1)) + "% affected.") if root.prediction_label else "No disease prediction available."))
                    color: 0, 0, 0, 1
                    font_size: 18
                    size_hint: 1, None
                    height: self.texture_size[1] + 20
                    halign: "left"
                    valign: "top"
                    text_size: self.width, None

                # Disease Details Section (Symptoms / Prevention)
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: self.minimum_height
                    spacing: 6

                    Label:
                        text: 'Symptoms' if root.disease_symptoms else ''
                        color: 0,0,0,1
                        font_size: 16
                        bold: True if root.disease_symptoms else False
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.width, None

                    Label:
                        text: root.disease_symptoms
                        color: 0,0,0,1
                        font_size: 15
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: 'left'
                        valign: 'top'
                        text_size: self.width, None

                    Label:
                        text: 'Prevention' if root.disease_prevention else ''
                        color: 0,0,0,1
                        font_size: 16
                        bold: True if root.disease_prevention else False
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.width, None

                    Label:
                        text: root.disease_prevention
                        color: 0,0,0,1
                        font_size: 15
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: 'left'
                        valign: 'top'
                        text_size: self.width, None

                # Date Section
                BoxLayout:
                    orientation: "vertical"
                    size_hint: 1, None
                    height: self.minimum_height
                    spacing: 8

                    Label:
                        text: "Date Scanned"
                        color: 0, 0, 0, 1
                        font_size: 18
                        bold: True
                        size_hint: 1, None
                        height: self.texture_size[1]
                        halign: "left"
                        valign: "middle"
                        text_size: self.width, None

                    Label:
                        text: root.formatted_timestamp
                        color: 0, 0, 0, 1
                        font_size: 18
                        size_hint: 1, None
                        height: self.texture_size[1]
                        halign: "left"
                        valign: "middle"
                        text_size: self.width, None
    
    # Confidence Badge (Fixed at bottom-left)
    BoxLayout:
        size_hint: None, None
        size: 180, 32
        pos_hint: {"x": 0.05, "y": 0.025}
        
        canvas.before:
            Color:
                rgba: app.get_color_from_hex(root.confidence_badge_color) if root.confidence_badge_color else (0.5, 0.5, 0.5, 1)
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [8]
        
        Label:
            text: root.confidence_badge_text
            color: 1, 1, 1, 1
            font_size: 13
            bold: True
            halign: "center"
            valign: "middle"
    
    # Retake Button (Fixed at bottom-center-left)
    RoundedButton:
        id: retake_button
        size_hint: None, None
        size: 120, 40
        pos_hint: {"x": 0.30, "y": 0.02}
        on_release: root.go_to_retake()
        
        BoxLayout:
            orientation: "horizontal"
            size: self.size
            spacing: 8
            padding: [8, 0, 8, 0]
            pos_hint: {"center_y": 0.5}
            size: retake_button.size
            pos: retake_button.pos
            
            Image:
                source: "app/assets/scan.png"
                allow_stretch: True
                keep_ratio: True
                size_hint: None, None
                size: 22, 22
                pos_hint: {"center_y": 0.5}
                mipmap: True
            
            Label:
                text: "Retake"
                color: 3/255, 30/255, 0/255, 1
                font_size: 16
                bold: True
                size_hint_x: None
                width: self.texture_size[0]
                halign: "left"
                valign: "middle"
                pos_hint: {"center_y": 0.5}
    
    # View Info Button (Fixed at bottom-right)
    RoundedButton:
        id: view_info_button
        size_hint: None, None
        size: 140, 40
        pos_hint: {"x": 0.58, "y": 0.02}
        on_release: root.view_full_info()
        
        BoxLayout:
            orientation: "horizontal"
            size: self.size
            spacing: 8
            padding: [12, 0, 12, 0]
            pos_hint: {"center_y": 0.5}
            size: view_info_button.size
            pos: view_info_button.pos
            
            Image:
                source: "app/assets/result.png"
                allow_stretch: True
                keep_ratio: True
                size_hint: None, None
                size: 22, 22
                pos_hint: {"center_y": 0.5}
                mipmap: True
            
            Label:
                text: "View Info"
                color: 3/255, 30/255, 0/255, 1
                font_size: 16
                bold: True
                size_hint_x: None
                width: self.texture_size[0]
                halign: "left"
                valign: "middle"
                pos_hint: {"center_y": 0.5}
