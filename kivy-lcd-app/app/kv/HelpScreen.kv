                Color:
                    rgba: 225/255, 225/255, 225/255, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]

            BoxLayout:
                orientation: "horizontal"
                size: self.parent.size
                pos: self.parent.pos
                spacing: 18
                padding: [18, 0, 0, 0]

                Image:
                    source: "app/assets/spec_system.png"
                    size_hint: None, None
                    size: 40, 40
                    pos_hint: {"center_y": 0.5}

                Label:
                    text: "System Specification"
                    color: (60/255, 60/255, 60/255, 1)
                    font_size: 20
                    bold: True
                    halign: "left"
                    valign: "middle"
                    text_size: self.size

        # 3 - Guidelines and Precautions
        Button:
            size_hint: None, None
            size: 370, 70
            background_normal: ''
            background_color: 0, 0, 0, 0
