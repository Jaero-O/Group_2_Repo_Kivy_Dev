<ScanDetailScreen>:
    name: 'scan_detail'
    
    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)
        
        # Header with back button
        BoxLayout:
            size_hint_y: 0.08
            spacing: dp(10)
            
            Button:
                text: '← Back'
                size_hint_x: 0.25
                on_press: root.go_back()
                background_color: 0.3, 0.3, 0.3, 1.0
            
            Label:
                text: 'Scan Details'
                font_size: sp(20)
                bold: True
                size_hint_x: 0.75
        
        # Scrollable content area
        ScrollView:
            do_scroll_x: False
            
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: dp(5)
                spacing: dp(15)
                
                # Image display
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: dp(300)
                    spacing: dp(5)
                    
                    Label:
                        text: 'Captured Image'
                        font_size: sp(16)
                        bold: True
                        size_hint_y: 0.1
                    
                    AsyncImage:
                        source: root.image_path if root.image_path else ''
                        allow_stretch: True
                        keep_ratio: True
                        size_hint_y: 0.9
                
                # Disease information card
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: dp(120)
                    padding: dp(10)
                    spacing: dp(5)
                    canvas.before:
                        Color:
                            rgba: 0.2, 0.2, 0.25, 1.0
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [dp(10)]
                    
                    Label:
                        text: 'Disease Analysis'
                        font_size: sp(16)
                        bold: True
                        size_hint_y: 0.25
                    
                    GridLayout:
                        cols: 2
                        spacing: dp(10)
                        size_hint_y: 0.75
                        
                        Label:
                            text: 'Disease:'
                            halign: 'right'
                            size_hint_x: 0.4
                        Label:
                            text: root.disease_name
                            halign: 'left'
                            bold: True
                            size_hint_x: 0.6
                        
                        Label:
                            text: 'Confidence:'
                            halign: 'right'
                            size_hint_x: 0.4
                        BoxLayout:
                            orientation: 'horizontal'
                            spacing: dp(5)
                            size_hint_x: 0.6
                            
                            Label:
                                text: f'{root.confidence_score:.1f}%'
                                halign: 'left'
                                bold: True
                                size_hint_x: 0.4
                            
                            # Confidence Badge
                            BoxLayout:
                                size_hint_x: 0.6
                                canvas.before:
                                    Color:
                                        rgba: app.get_color_from_hex(root.confidence_badge_color) if root.confidence_badge_color else (0.5, 0.5, 0.5, 1)
                                    RoundedRectangle:
                                        pos: self.pos
                                        size: self.size
                                        radius: [dp(5)]
                                
                                Label:
                                    text: root.confidence_badge_text
                                    color: 1, 1, 1, 1
                                    font_size: sp(11)
                                    bold: True
                                    halign: 'center'
                                    valign: 'middle'
                        
                        Label:
                            text: 'Severity:'
                            halign: 'right'
                            size_hint_x: 0.4
                        Label:
                            text: f'{root.severity_percentage:.1f}% ({root.severity_name})'
                            halign: 'left'
                            bold: True
                            color: (1.0, 0.75, 0.0, 1.0) if root.severity_percentage >= 30 else (0.2, 0.7, 0.3, 1.0)
                            size_hint_x: 0.6
                
                # Leaf metrics card
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: dp(120)
                    padding: dp(10)
                    spacing: dp(5)
                    canvas.before:
                        Color:
                            rgba: 0.2, 0.25, 0.2, 1.0
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [dp(10)]
                    
                    Label:
                        text: 'Leaf Metrics'
                        font_size: sp(16)
                        bold: True
                        size_hint_y: 0.25
                    
                    GridLayout:
                        cols: 2
                        spacing: dp(10)
                        size_hint_y: 0.75
                        
                        Label:
                            text: 'Total Leaf Area:'
                            halign: 'right'
                            size_hint_x: 0.5
                        Label:
                            text: f'{root.total_leaf_area:.0f} px²'
                            halign: 'left'
                            size_hint_x: 0.5
                        
                        Label:
                            text: 'Lesion Area:'
                            halign: 'right'
                            size_hint_x: 0.5
                        Label:
                            text: f'{root.lesion_area:.0f} px²'
                            halign: 'left'
                            size_hint_x: 0.5
                        
                        Label:
                            text: 'Lesion Coverage:'
                            halign: 'right'
                            size_hint_x: 0.5
                        Label:
                            text: f'{root.lesion_coverage:.1f}%'
                            halign: 'left'
                            bold: True
                            size_hint_x: 0.5
                
                # Scan metadata card
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: dp(100)
                    padding: dp(10)
                    spacing: dp(5)
                    canvas.before:
                        Color:
                            rgba: 0.25, 0.2, 0.2, 1.0
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [dp(10)]
                    
                    Label:
                        text: 'Scan Information'
                        font_size: sp(16)
                        bold: True
                        size_hint_y: 0.3
                    
                    GridLayout:
                        cols: 2
                        spacing: dp(10)
                        size_hint_y: 0.7
                        
                        Label:
                            text: 'Tree:'
                            halign: 'right'
                            size_hint_x: 0.4
                        Label:
                            text: root.tree_name
                            halign: 'left'
                            size_hint_x: 0.6
                        
                        Label:
                            text: 'Date:'
                            halign: 'right'
                            size_hint_x: 0.4
                        Label:
                            text: root.formatted_timestamp
                            halign: 'left'
                            size_hint_x: 0.6
                
                # Notes section (if present)
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: dp(80) if root.notes else 0
                    opacity: 1 if root.notes else 0
                    padding: dp(10)
                    spacing: dp(5)
                    canvas.before:
                        Color:
                            rgba: 0.2, 0.2, 0.2, 1.0
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [dp(10)]
                    
                    Label:
                        text: 'Notes'
                        font_size: sp(16)
                        bold: True
                        size_hint_y: 0.3
                    
                    Label:
                        text: root.notes
                        halign: 'left'
                        valign: 'top'
                        text_size: self.size
                        size_hint_y: 0.7
                
                # Action buttons
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: dp(120)
                    spacing: dp(10)
                    
                    Button:
                        text: 'Export Data'
                        size_hint_y: 0.5
                        background_color: 0.2, 0.5, 0.8, 1.0
                        on_press: root.export_data()
                    
                    Button:
                        text: 'Delete Scan'
                        size_hint_y: 0.5
                        background_color: 0.8, 0.2, 0.2, 1.0
                        disabled: not root.delete_enabled
                        on_press: root.confirm_delete()
